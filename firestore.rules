rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Explicitly allow EVERYTHING for all collections
    // to stop the permission-denied errors permanently for development
    match /{document=**} {
      allow read, write: if true;
    }

    // Double-ensure users collection is open
    match /users/{userId} {
      allow read, write, update, delete: if true;
    }
    
    // Double-ensure products collection is open 
    match /products/{productId} {
      allow read, write, update, delete: if true;
    }
  }
}
