rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function userExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    function isOwner() {
      return isAuthenticated() && userExists() && getUserData().role == 'OWNER';
    }
    
    function isAdmin() {
      return isAuthenticated() && userExists() && getUserData().role == 'ADMIN';
    }
    
    function isSales() {
      return isAuthenticated() && userExists() && getUserData().role == 'SALES';
    }
    
    function isBilling() {
      return isAuthenticated() && userExists() && getUserData().role == 'BILLING';
    }
    
    function isDelivery() {
      return isAuthenticated() && userExists() && getUserData().role == 'DELIVERY';
    }
    
    function hasRoute(routeId) {
      return getUserData().assignedRoutes.hasAny([routeId]);
    }
    
    // Users collection
    match /users/{userId} {
      // Allow ANYONE to read user documents for login purposes (code-based authentication)
      // Security is maintained because passwords are only used server-side via Firebase Auth
      allow read: if true;
      // Allow owners and admins to list all users
      allow list: if isOwner() || isAdmin();
      allow write: if isAdmin();
      allow create: if isAdmin();
      allow update: if (isAuthenticated() && request.auth.uid == userId) || isAdmin();
    }
    
    // Shops collection
    match /shops/{shopId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin() || isSales();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Products collection
    match /products/{productId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Locations collection
    match /locations/{locationId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Categories collection
    match /categories/{categoryId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Orders collection
    match /orders/{orderId} {
      allow read: if isAuthenticated();
      
      allow create: if isSales() && 
        request.resource.data.createdByUserId == request.auth.uid &&
        request.resource.data.status == 'PENDING';
      
      allow update: if (
        // Sales can edit their own pending orders
        (isSales() && 
         resource.data.createdByUserId == request.auth.uid && 
         resource.data.status == 'PENDING') ||
        // Billing can update status and billing info
        (isBilling() && 
         request.resource.data.status in ['BILLED', 'DISPATCHED']) ||
        // Delivery can mark as delivered
        (isDelivery() && 
         request.resource.data.status == 'DELIVERED') ||
        // Owner and Admin can do anything
        isOwner() || isAdmin()
      );
      
      allow delete: if isOwner() || isAdmin();
      
      // Order items subcollection
      match /orderItems/{itemId} {
        allow read: if isAuthenticated();
        allow write: if isSales() || isBilling() || isOwner() || isAdmin();
      }
    }
    
    // Payments collection
    match /payments/{paymentId} {
      allow read: if isAuthenticated();
      allow create: if isDelivery() || isSales() || isOwner() || isAdmin();
      allow update, delete: if isOwner() || isAdmin();
    }
    
    // Activity Logs collection (append-only for audit)
    match /activityLogs/{logId} {
      allow read: if isOwner();
      allow create: if isAuthenticated();
      allow update, delete: if false; // No one can modify logs
    }
  }
}
